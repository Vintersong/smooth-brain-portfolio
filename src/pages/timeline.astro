---
/*
 * Mission: Fuck big tech, fuck black‑box software, and fuck predatory subscriptions.
 * Build open, self‑hosted tools that let people own their infrastructure, inspect their code,
 * and walk away from opaque SaaS gatekeepers whenever they choose.
 */

import TimelineComponent from '../components/react/Timeline.tsx';
import { milestones, sections, type Milestone } from '../data/milestones';
---

<!DOCTYPE html>
<!--
  Mission: Fuck big tech, fuck black‑box software, and fuck predatory subscriptions.
  Build open, self‑hosted tools that let people own their infrastructure, inspect their code,
  and walk away from opaque SaaS gatekeepers whenever they choose.
-->
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>.smooth-brain-designs | N.O.V.A Timeline</title>
  <meta name="description" content="NOVA Framework Timeline — Evolution & parallel research in modular AI memory, agent-first development, and structured context management.">

  <!-- Favicon -->
  <link rel="icon" type="image/svg+xml" href="/favicon.svg">
  <link rel="icon" type="image/x-icon" href="/favicon.ico">
  <link rel="stylesheet" href="/css/styles.css">
  <style is:global>
    @keyframes fade-in {
      from { opacity: 0; transform: translateY(8px); }
      to { opacity: 1; transform: translateY(0); }
    }
    .animate-fade-in {
      animation: fade-in 0.3s ease-out;
    }
  </style>
</head>
<body>
  <div class="min-h-screen">
    <!-- Hero -->
    <header class="flex flex-col items-center justify-center py-24 px-6 text-center max-w-3xl mx-auto">
      <a href="/" class="text-xs font-mono tracking-widest uppercase hover:text-accent transition-colors mb-8" style="color: rgba(212, 180, 240, 0.6);">&larr; back</a>
      <h1 class="text-4xl md:text-5xl font-bold tracking-tight mb-4" style="color: var(--lavender); text-shadow: 0 0 30px var(--lavender-glow);">
        N.O.V.A
      </h1>
      <p class="text-lg mb-2" style="color: var(--accent); text-shadow: 0 0 15px var(--teal-glow);">
        Framework Timeline: Evolution & Parallel Research
      </p>
      <p class="text-sm max-w-xl leading-relaxed" style="color: rgba(237, 230, 245, 0.75);">
        Comparing the independent development of the NOVA framework with parallel research and industry developments in modular AI memory, agent-first development, and structured context management.
      </p>
    </header>

    <TimelineComponent client:load milestones={milestones} sections={sections} />
    
    <!-- Static HTML fallback for no-JS and SEO -->
    <noscript>
      <section class="relative mx-auto max-w-4xl px-6 py-8">
        <div class="text-center mb-8">
          <p class="text-sm" style="color: rgba(237, 230, 245, 0.7);">
            JavaScript is required for interactive filtering. Below is the complete timeline.
          </p>
        </div>
        
        {sections.map((section) => {
          const sectionMilestones = milestones.filter((m: Milestone) => m.section === section);
          if (sectionMilestones.length === 0) return null;
          
          return (
            <div key={section}>
              <div class="flex items-center gap-4 py-8 md:py-12">
                <div class="hidden sm:block h-px flex-1" style="background: linear-gradient(to right, transparent, rgba(212, 180, 240, 0.3), transparent);"></div>
                <h2 class="text-xs sm:text-sm md:text-base font-mono tracking-wide uppercase text-center" style="color: rgba(212, 180, 240, 0.7);">
                  {section}
                </h2>
                <div class="hidden sm:block h-px flex-1" style="background: linear-gradient(to right, transparent, rgba(212, 180, 240, 0.3), transparent);"></div>
              </div>
              
              {sectionMilestones.map((milestone: Milestone) => {
                const categoryColors = {
                  nova: '#7ee8cc',
                  research: '#d4b4f0',
                  industry: '#f0909f',
                  convergence: '#f0a8c4'
                };
                const color = categoryColors[milestone.category];
                const bgColor = milestone.category === 'nova' ? 'rgba(126, 232, 204, 0.08)' :
                                milestone.category === 'research' ? 'rgba(212, 180, 240, 0.08)' :
                                milestone.category === 'industry' ? 'rgba(240, 144, 159, 0.08)' :
                                'rgba(240, 168, 196, 0.08)';
                
                const categoryLabels = {
                  nova: 'NOVA',
                  research: 'Research',
                  industry: 'Industry',
                  convergence: 'Convergence'
                };
                
                return (
                  <div class="mb-8 p-6 rounded-lg border-2" style={`background-color: ${bgColor}; border-color: ${color};`}>
                    <div class="mb-3">
                      <span class="text-xs font-mono tracking-widest uppercase" style="color: rgba(126, 232, 204, 0.7);">
                        {milestone.date}
                      </span>
                      <span class="ml-3 text-sm font-mono uppercase tracking-widest font-semibold" style={`color: ${color};`}>
                        {categoryLabels[milestone.category]}
                      </span>
                      {milestone.publication && (
                        <span class="ml-2 text-[10px] font-mono" style="color: rgba(237, 230, 245, 0.6);">
                          {milestone.publication}
                        </span>
                      )}
                    </div>
                    
                    <h3 class="text-base font-semibold leading-snug mb-2" style="color: var(--lavender, #d4b4f0);">
                      {milestone.title}
                    </h3>
                    
                    <p class="text-sm leading-relaxed mb-3" style="color: rgba(237, 230, 245, 0.8);">
                      {milestone.description}
                    </p>
                    
                    {milestone.authors && (
                      <p class="text-xs italic mb-2" style="color: rgba(237, 230, 245, 0.5);">
                        {milestone.authors}
                      </p>
                    )}
                    
                    {milestone.contributions && milestone.contributions.length > 0 && (
                      <div class="mt-3 mb-3">
                        <h4 class="text-xs font-mono uppercase tracking-widest mb-2" style="color: rgba(212, 180, 240, 0.7);">
                          Key Contributions
                        </h4>
                        <ul class="space-y-1">
                          {milestone.contributions.map((contribution: string) => (
                            <li class="text-xs leading-relaxed pl-3" style="color: rgba(237, 230, 245, 0.75);">
                              › {contribution}
                            </li>
                          ))}
                        </ul>
                      </div>
                    )}
                    
                    {milestone.relation && (
                      <div class="mt-3 mb-3">
                        <h4 class="text-xs font-mono uppercase tracking-widest mb-2" style="color: rgba(126, 232, 204, 0.8);">
                          Relation to NOVA
                        </h4>
                        <p class="text-xs leading-relaxed italic" style="color: rgba(126, 232, 204, 0.7);">
                          {milestone.relation}
                        </p>
                      </div>
                    )}
                    
                    {milestone.links && milestone.links.length > 0 && (
                      <div class="flex gap-2 flex-wrap mt-3">
                        {milestone.links.map((link) => (
                          <a
                            href={link.url}
                            target="_blank"
                            rel="noopener noreferrer"
                            class="text-[10px] font-mono px-2 py-1 rounded border"
                            style="border-color: rgba(212, 180, 240, 0.3); color: rgba(212, 180, 240, 0.8);"
                          >
                            {link.label} ↗
                          </a>
                        ))}
                      </div>
                    )}
                  </div>
                );
              })}
            </div>
          );
        })}
        
        <div class="mt-16 mb-8 text-center space-y-4">
          <div class="h-px w-48 mx-auto" style="background: linear-gradient(to right, transparent, rgba(126, 232, 204, 0.5), transparent);"></div>
          <p class="text-sm max-w-xl mx-auto leading-relaxed" style="color: rgba(237, 230, 245, 0.7);">
            External, structured, modular memory with orchestration layers is the
            emerging architectural consensus for AI agent cognition.
          </p>
        </div>
      </section>
    </noscript>
  </div>
</body>
</html>
